        <h2 class="todo-title">Add New Todo</h2>

        <div>
            <a class="btn" href="/">Back</a>

            <form action="/add-todo" method="post">
                <div class="new-todo">
                    <div class="form-group">
                        <lable for="title" class="text-light">Todo</lable>
                        <input type="text" name="title" value="" placeholder="Todo"/>
                    </div>

                    <div class="form-group">
                        <lable for="desc" class="text-light">Description</lable>
